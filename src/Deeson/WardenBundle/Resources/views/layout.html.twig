{{ include('DeesonWardenBundle::header.html.twig') }}

<div class="wrapper">

  <header class="main-header">
    <!-- Logo -->
    <a href="/" class="logo">
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><span class="icon-deesonicons-21"></span></span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><span class="icon-deesonicons-21"><strong>Warden</strong></span></span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>

      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <!-- User Account: style can be found in dropdown.less -->
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <img src="https://source.unsplash.com/random/160x160" class="user-image" alt="{{ app.user.username }}">
              <span class="hidden-xs">{{ app.user.username }} - 11</span>
            </a>
            <ul class="dropdown-menu">
              <!-- User image -->
              <li class="user-header">
                <img src="https://source.unsplash.com/random/160x160" class="img-circle" alt="{{ app.user.username }}">
                <p>
                  {{ app.user.username }}
                </p>
              </li>
              <li class="user-body">
                <div class="row">
                  {% if is_granted('ROLE_ADMIN') %}
                  <div class="col-xs-6 text-center">
                    <a href="{{ path('admin_user_list') }}">Users</a>
                  </div>
                  <div class="col-xs-6 text-center">
                    <a href="{{ path('fos_user_group_list') }}">Groups</a>
                  </div>
                  {% endif %}
                </div>
                <!-- /.row -->
              </li>
              <!-- Menu Footer-->
              <li class="user-footer">
                <div class="pull-left">
                  {#<a href="{{ path('fos_user_profile_edit') }}" class="btn btn-default btn-flat">Profile</a>#}
                  <a href="{{ path('fos_user_profile_show') }}" class="btn btn-default btn-flat">Profile</a>
                </div>
                <div class="pull-right">
                  <a href="{{ path('fos_user_security_logout') }}" class="btn btn-default btn-flat">Sign out</a>
                </div>
              </li>
            </ul>
          </li>
          {#<li>
            <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
          </li>#}
        </ul>
      </div>
    </nav>
  </header>
  <!-- Left side column. contains the logo and sidebar -->
  <aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
      <!-- Sidebar user panel -->
      <div class="user-panel">
        <div class="pull-left image">
          <img src="https://source.unsplash.com/random/160x160" class="img-circle" alt="{{ app.user }}">
        </div>
        <div class="pull-left info">
          <p>Hello, {{ app.user.username }}</p>
        </div>
      </div>
      <!-- sidebar menu: : style can be found in sidebar.less -->
      <ul class="sidebar-menu">
        <li {% if app.request.get('_route') == '_dashboard' %} class="active"{% endif %}>
            <a href="{{ path('_dashboard') }}" class="active"><i class="icon-deesonicons-21"></i> &nbsp;<span>Dashboard</span></a>
        </li>
        <li {% if app.request.get('_route') starts with 'sites_' %} class="active"{% endif %}>
            <a href="{{ path('sites_list') }}"><i class="fa fa-globe"></i> &nbsp;<span>Sites</span></a>
        </li>
        <li {% if app.request.get('_route') starts with 'warden_drupal_modules_' %} class="active"{% endif %}>
            <a href="{{ path('warden_drupal_modules_list') }}"><i class="fa fa-th"></i> &nbsp;<span>Drupal Modules</span></a>
        </li>
        <li {% if app.request.get('_route') starts with 'warden_third_party_libraries_' %} class="active"{% endif %}>
            <a href="{{ path('warden_third_party_libraries_list') }}"><i class="fa fa-th-list"></i> &nbsp;<span>Third Party Libraries</span></a>
        </li>
      </ul>
      <div class="marketing col-xs-12 bottom-absolute">
        <span class="marketing-lg">
          <p>
            <a href="http://deeson.co.uk" target="_blank"><i class="icon-deesonicons-13"></i></a>&nbsp;
            <a href="https://www.linkedin.com/company/deeson"><span class="icon-deesonicons-242"></span></a>&nbsp;
            <a href="https://twitter.com/DeesonAgency"><span class="icon-deesonicons-07"></span></a>&nbsp;
            <br/>
            <span class="small"><span class="icon-deesonicons-02"></span>&nbsp;Drupal experts since 2007</span>
          </p>
        </span>
      </div>
    </section>
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        {% block page_title %}{% endblock %}
      </h1>
      {#<ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
      </ol>#}
    </section>

    <!-- Main content -->
    <section class="content">

      {% for flashMessage in app.session.flashbag.get('error') %}
      <div class="callout callout-danger">
          <p>{{ flashMessage }}</p>
      </div>
      {% endfor %}
      {% for flashMessage in app.session.flashbag.get('notice') %}
      <div class="callout callout-info">
          <p>{{ flashMessage }}</p>
      </div>
      {% endfor %}

      {% block content %}{% endblock %}

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
</div>
<!-- ./wrapper -->

{{ include('DeesonWardenBundle::footer.html.twig') }}
