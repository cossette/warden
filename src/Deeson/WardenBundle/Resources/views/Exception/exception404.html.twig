{% extends 'DeesonWardenBundle::layout.html.twig' %}

{% block title %}Warden Error - Access Denied{% endblock %}

{% block page_title %}Access Denied{% endblock %}

{% block content %}

    <div class="error-page">
      <h2 class="headline text-yellow">{{ exception.statusCode }}</h2>

      <div class="error-content">
        <h3><i class="fa fa-warning text-yellow"></i> Oops! Page not found.</h3>

        <p>
          We could not find the page you were looking for. Meanwhile, you may <a href="{{ path('_dashboard') }}">return to dashboard</a>.
        </p>
      </div>
    </div>

{% endblock %}
